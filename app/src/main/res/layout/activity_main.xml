<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="392dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:text="@string/textView09"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/textView02"
        android:inputType="number"
        android:text=""
        android:textColorHint="#78909C"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/inputTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48sp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/textView03"
        android:inputType="number"
        android:text=""
        android:textColorHint="#78909C"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="@string/textView10"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12sp"
        android:gravity="center_horizontal"
        android:text="@string/textView04"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintBottom_toTopOf="@+id/inputTextNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:gravity="center_horizontal"
        android:text="@string/textView05"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintBottom_toTopOf="@+id/inputTextNumber2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="366sp"
        android:layout_height="32sp"
        android:gravity="center_horizontal"
        android:text="@string/textView06"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <RadioGroup
        android:id="@+id/radioGroupOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupRepetition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_with_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:focusable="true"
            android:text="@string/textView11" />

        <RadioButton
            android:id="@+id/radio_without_order"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:focusable="true"
            android:text="@string/textView12" />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGroupRepetition"
        android:layout_width="325sp"
        android:layout_height="54sp"
        android:layout_marginBottom="36dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_with_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:checked="true"
            android:focusable="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:minHeight="48dp"
            android:text="@string/textView08"
            app:layout_constraintBottom_toTopOf="@+id/button_result"
            tools:layout_editor_absoluteX="139sp" />

        <RadioButton
            android:id="@+id/radio_without_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:focusable="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:minHeight="48dp"
            android:text="@string/textView07"
            app:layout_constraintBottom_toTopOf="@+id/radio_with_rep"
            tools:layout_editor_absoluteX="143sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="257dp"
        android:layout_height="46dp"
        android:layout_marginBottom="32dp"
        android:text="@string/textView14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="@string/textView15"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupOrder"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:text="@string/textView16"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupOrder"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>